{
  "name": "unit-test",
  "version": "1.0.0",
  "description": "**Важно**: каждая задача выполняется в виде отдельного проекта с собственным GitHub репозиторием.",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --mode development",
    "build": "webpack --mode production",
    "test": "jest",
    "coverage": "jest --coverage",
    "preshow:coverage": "npm run coverage",
    "show:coverage": "live-server coverage/lcov-report",
    "preshow:dist": "npm run build",
    "show:dist": "live-server dist",
    "lint": "eslint --ignore-path=./.prettierignore.txt dist/**/*.{js,jsx}",
    "prettier": "prettier-eslint --write \"dist/**/*.{js,jsx,json}\"",
    "precommit": "lint-staged"
  },
  "author": "coursar",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "live-server": "^1.2.1",
    "mini-css-extract-plugin": "^0.9.0",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "core-js": "^3.6.4",
    "lodash": "^4.17.15",
    "mixin-deep": "^2.0.1",
    "set-value": "^3.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CarolineFell/unit-test.git"
  },
  "keywords": [
    "test"
  ],
  "bugs": {
    "url": "https://github.com/CarolineFell/unit-test/issues"
  },
  "homepage": "https://github.com/CarolineFell/unit-test#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
